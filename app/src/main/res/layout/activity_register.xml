<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Register">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/backgroundEEEEEE"
        android:padding="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textViewTituloRegister"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Registro"
            android:textSize="32sp"
            android:textAlignment="center"
            android:paddingTop="20dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Space
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <EditText
                android:id="@+id/email_ETX"
                android:layout_width="0px"
                android:layout_height="50dp"
                android:ems="10"
                android:hint="@string/txtEmailInput"
                android:inputType="textEmailAddress"
                android:layout_weight="5"/>
            <Space
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Space
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <EditText
                android:id="@+id/usuario_ETX"
                android:layout_width="0px"
                android:layout_height="50dp"
                android:ems="10"
                android:hint="@string/txtUserInput"
                android:inputType="textPersonName"
                android:layout_weight="5"/>

            <Space
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Space
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <EditText
                android:id="@+id/password_ETX"
                android:layout_width="0px"
                android:layout_height="50dp"
                android:ems="10"
                android:hint="@string/txtPasswordInput"
                android:inputType="textPassword"
                android:layout_weight="5"/>

            <Space
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="50dp">

            <Space
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <Button
                android:id="@+id/buttonRegistrarse"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:onClick="adsad"
                android:text="Registrarse"
                android:layout_weight="2"/>

            <Space
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Space
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/textViewVolverLogin"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:onClick="cambioActividad"
                android:text="Ingresar session"
                android:textSize="12sp"
                android:layout_weight="2"/>

            <Space
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="100px">

            <Space
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/textView_Avisa_Validador"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:onClick="cambioActividad"
                android:text=""
                android:textSize="24sp"
                android:textAlignment="center"
                android:layout_weight="6"/>

            <Space
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="1" />
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>