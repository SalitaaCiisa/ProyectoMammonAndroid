<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundEEEEEE"
    tools:context=".crudCuentasBancarias">


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="Cuentas"
        android:textColor="@color/letrasNegrasPrimarias"
        android:textSize="32sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TableLayout
        android:layout_width="381dp"
        android:layout_height="609dp"
        android:background="@color/secondaryColor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.466"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.868">

        <!-- Table Head -->
        <TableRow
            android:background="@color/primaryColor">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Nombre cuenta"
                android:textColor="@color/letrasNegrasPrimarias"
                android:padding="10sp"
                android:textSize="16sp"
                android:layout_weight="4"
                android:gravity="center_horizontal"
                android:layout_gravity="center_vertical"/>
            <TextView
                android:id="@+id/textView3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Dinero cuenta"
                android:textColor="@color/letrasNegrasPrimarias"
                android:padding="10sp"
                android:textSize="16sp"
                android:layout_weight="4"
                android:gravity="center_horizontal"
                android:layout_gravity="center_vertical"/>
            <TextView
                android:id="@+id/textView4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Ultima transaccion"
                android:textColor="@color/letrasNegrasPrimarias"
                android:padding="10sp"
                android:textSize="16sp"
                android:layout_weight="4"
                android:gravity="center_horizontal"
                android:layout_gravity="center_vertical"/>
        </TableRow>
        <!-- Table data -->
        <TableRow
            android:background="@color/secondaryColor">
            <TextView
                android:id="@+id/text_CuentaBancaria_Nombre_1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Prueba nombre 1"
                android:textColor="@color/letrasNegrasSecundarias"
                android:padding="10sp"
                android:textSize="13sp"
                android:layout_weight="3"
                android:gravity="center_horizontal"
                android:layout_gravity="center_vertical"/>
            <TextView
                android:id="@+id/text_CuentaBancaria_Dinero_1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="$Prueba dinero 1"
                android:textColor="@color/letrasNegrasSecundarias"
                android:padding="10sp"
                android:textSize="13sp"
                android:layout_weight="3"
                android:gravity="center_horizontal"
                android:layout_gravity="center_vertical"/>
            <TextView
                android:id="@+id/text_CuentaBancaria_Ultima_1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Prueba/fecha/1"
                android:textColor="@color/letrasNegrasSecundarias"
                android:padding="10sp"
                android:textSize="13sp"
                android:layout_weight="3"
                android:gravity="center_horizontal"
                android:layout_gravity="center_vertical"/>
        </TableRow>
        <!--table data 2-->
        <TableRow
            android:background="@color/secondaryColor">
            <TextView
                android:id="@+id/text_CuentaBancaria_Nombre_2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Prueba nombre 2"
                android:textColor="@color/letrasNegrasSecundarias"
                android:padding="10sp"
                android:textSize="13sp"
                android:layout_weight="3"
                android:gravity="center_horizontal"
                android:layout_gravity="center_vertical"/>
            <TextView
                android:id="@+id/text_CuentaBancaria_Dinero_2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="$Prueba dinero 2"
                android:textColor="@color/letrasNegrasSecundarias"
                android:padding="10sp"
                android:textSize="13sp"
                android:layout_weight="3"
                android:gravity="center_horizontal"
                android:layout_gravity="center_vertical"/>
            <TextView
                android:id="@+id/text_CuentaBancaria_Ultima_2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Prueba/fecha/2"
                android:textColor="@color/letrasNegrasSecundarias"
                android:padding="10sp"
                android:textSize="13sp"
                android:layout_weight="3"
                android:gravity="center_horizontal"
                android:layout_gravity="center_vertical"/>
        </TableRow>
        <!--table data 3-->
        <TableRow
            android:background="@color/secondaryColor">
            <TextView
                android:id="@+id/text_CuentaBancaria_Nombre_3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Prueba nombre 3"
                android:textColor="@color/letrasNegrasSecundarias"
                android:padding="10sp"
                android:textSize="13sp"
                android:layout_weight="3"
                android:gravity="center_horizontal"
                android:layout_gravity="center_vertical"/>
            <TextView
                android:id="@+id/text_CuentaBancaria_Dinero_3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="$Prueba dinero 3"
                android:textColor="@color/letrasNegrasSecundarias"
                android:padding="10sp"
                android:textSize="13sp"
                android:layout_weight="3"
                android:gravity="center_horizontal"
                android:layout_gravity="center_vertical"/>
            <TextView
                android:id="@+id/text_CuentaBancaria_Ultima_3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Prueba/fecha/3"
                android:textColor="@color/letrasNegrasSecundarias"
                android:padding="10sp"
                android:textSize="13sp"
                android:layout_weight="3"
                android:gravity="center_horizontal"
                android:layout_gravity="center_vertical"/>
        </TableRow>
    </TableLayout>

</androidx.constraintlayout.widget.ConstraintLayout>